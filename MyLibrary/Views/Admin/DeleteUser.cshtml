@model List<User>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cədvəl Dizayn</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            background: #fdf6e3;
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 10px 16px;
            background-color: lightskyblue;
            color: black;
            text-decoration: none;
            font-weight: 500;
            border-radius: 6px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            transition: 0.3s;
        }

            .back-btn:hover {
                background-color: #4aa3e0;
                color: white;
            }

        table {
            border-collapse: collapse;
            width: 70%;
            background-color: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        thead {
            background-color: lightskyblue;
            color: #fff;
        }

        th, td {
            padding: 14px 20px;
            text-align: left;
        }

        th {
            font-weight: 600;
            font-size: 16px;
        }

        tbody tr:nth-child(even) {
            background-color: #f7faff;
        }

        tbody tr:hover {
            background-color: #e6f2ff;
            cursor: pointer;
        }

        .delete-btn {
            background-color: #ff4d4d;
            color: white;
            padding: 6px 12px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 14px;
            transition: 0.3s;
        }

            .delete-btn:hover {
                background-color: #cc0000;
            }
    </style>
</head>
<body>
    <a asp-controller="Admin" asp-action="DashBoard" class="back-btn">Geri</a>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Ad</th>
                <th>Email</th>
                <th>Əməliyyatlar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.DisplayId</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id" class="delete-btn">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
