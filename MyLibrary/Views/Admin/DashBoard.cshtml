@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Admin Panel</h1>

        <!-- Dashboard Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">İstifadəçilər</h5>
                        <p class="card-text">Sistemdəki bütün istifadəçiləri idarə et.</p>
                        <a href="#" class="btn btn-light btn-sm">Giriş</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Qeydiyyatlar</h5>
                        <p class="card-text">Yeni istifadəçilərin qeydiyyatlarını yoxla.</p>
                        <a href="#" class="btn btn-light btn-sm">Giriş</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">Sistem Parametrləri</h5>
                        <p class="card-text">Tətbiq parametrlərini dəyişdir.</p>
                        <a href="#" class="btn btn-light btn-sm">Giriş</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table of Users (Example) -->
        <h3>İstifadəçilər Siyahısı</h3>
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Rol</th>
                    <th>Əməliyyatlar</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>user1</td>
                    <td>User</td>
                    <td>
                        <button class="btn btn-sm btn-danger">Sil</button>
                        <button class="btn btn-sm btn-secondary">Redaktə et</button>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>user2</td>
                    <td>User</td>
                    <td>
                        <button class="btn btn-sm btn-danger">Sil</button>
                        <button class="btn btn-sm btn-secondary">Redaktə et</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
