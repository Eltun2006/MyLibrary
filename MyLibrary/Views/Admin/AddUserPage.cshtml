@model List<User>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cədvəl Dizayn</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            background: #fdf6e3; /* köhnə kitab səhifəsi effekti */
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 10px 16px;
            background-color: lightskyblue;
            color: black;
            text-decoration: none;
            font-weight: 500;
            border-radius: 6px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            transition: 0.3s;
        }

            .back-btn:hover {
                background-color: #4aa3e0;
                color: white;
            }

        .table-container {
            position: relative; /* Plus düyməsi üçün reference */
            width: 70%;
            margin-top: 40px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            background-color: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        thead {
            background-color: lightskyblue;
            color: #fff;
        }

        th, td {
            padding: 14px 20px;
            text-align: left;
        }

        th {
            font-weight: 600;
            font-size: 16px;
        }

        tbody tr:nth-child(even) {
            background-color: #f7faff;
        }

        tbody tr:hover {
            background-color: #e6f2ff;
            cursor: pointer;
        }

        .plus-btn {
            position: absolute;
            bottom: -70px; /* Table-in altından bir az aşağı */
            right: 0;
            width: 50px;
            height: 50px;
            background-color: lightgreen;
            color: white;
            font-size: 28px;
            text-align: center;
            line-height: 50px;
            border-radius: 50%;
            text-decoration: none;
            font-weight: bold;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            transition: 0.3s;
        }

            .plus-btn:hover {
                background-color: #4CAF50;
            }

    </style>
</head>
<body>
    <a asp-controller="Admin" asp-action="DashBoard" class="back-btn">Geri</a>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.DisplayId</td>
                        <td>@user.Username</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Plus düyməsi table-in sağ alt küncündə -->
        <a asp-controller="Admin" asp-action="AddUser" class="plus-btn">+</a>
    </div>

</body>
</html>
