@model List<Book>

@{
    ViewBag.Title = "My Library";
}

<html>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
    }

    body {
        font-family: 'Georgia', serif;
        margin: 0;
        padding: 0;
        background: #f4ecd8 url('https://www.transparenttextures.com/patterns/paper-fibers.png');
        color: #3e2f1c;
    }

    h2, h3 {
        font-family: 'Merriweather', serif;
    }

    .container {
        display: flex;
        min-height: 100vh;
    }

    .sidebar-container {
        width: 200px;
        background: #d9c8a9;
        display: flex;
        flex-direction: column;
        border-right: 3px solid #b69e74;
        box-shadow: 3px 0 10px rgba(0,0,0,0.1);
    }

    .sidebar-buttons {
        padding: 25px;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

        .sidebar-buttons h3 {
            margin-bottom: 15px;
            color: #4b3b1f;
            font-weight: bold;
        }

        .sidebar-buttons button {
            padding: 10px;
            border: none;
            background: #f2e4c7;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-family: 'Georgia';
            color: #3e2f1c;
        }

            .sidebar-buttons button:hover {
                background: #e0cda1;
                transform: translateX(4px);
            }

    .content {
        flex: 1;
        padding: 40px;
        overflow-y: auto;
    }

    .add-book-btn {
        display: inline-block;
        background: #4b3b1f;
        color: #fff8e7;
        padding: 12px 20px;
        border-radius: 10px;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
        margin-bottom: 25px;
    }

        .add-book-btn:hover {
            background: #5a472b;
            transform: translateY(-2px);
        }

    .book-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 30px;
        list-style: none;
        padding: 0;
    }

        .book-list li {
            background: #fffaf0;
            border-radius: 14px;
            box-shadow: 0 5px 14px rgba(0,0,0,0.15);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            text-align: center;
            cursor: pointer;
        }

            .book-list li:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 18px rgba(0,0,0,0.25);
            }

        .book-list img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-bottom: 3px solid #cbb98a;
        }

        .book-list strong {
            font-size: 1.3em;
            font-weight: bold;
            color: #3e2f1c;
            margin-top: 12px;
        }

    .book-details {
        padding: 15px 18px;
        flex: 1;
        text-align: left;
    }

        .book-details em {
            font-style: italic;
            color: #6e5a3b;
            font-weight: 600;
        }

        .book-details p {
            margin: 5px 0;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

    .book-item form button {
        background: #b93e3e;
        color: white;
        border: none;
        border-radius: 6px;
        padding: 8px 16px;
        cursor: pointer;
        margin: 15px auto 12px;
        display: inline-block;
        font-weight: bold;
        transition: background 0.3s;
    }

        .book-item form button:hover {
            background: #8f2d2d;
        }

    .rating {
        margin-top: 8px;
    }

        .rating .star {
            font-size: 22px;
            margin-right: 1px;
        }

        .rating .filled {
            color: #ffbf00;
        }

        .rating .empty {
            color: #d3c7b2;
        }
</style>

<div class="container">
    <div class="sidebar-container">
        <div class="sidebar-buttons">
            <h3>@ViewBag.UserName</h3>
            <button onclick="location.href='@Url.Action("Libraries", "Library")'">📚 All Libraries</button>
            <button onclick="location.href='@Url.Action("Login", "Account")'">🚪 Logout</button>
        </div>
    </div>

    <div class="content">
        <h2>📖 My Bookshelf</h2>
        <hr>

        <!-- ✅ DÜZƏLİŞ: Yeni kitab əlavə et (id olmadan) -->
        <a href="@Url.Action("AddBook", "Page")" class="add-book-btn">+ Add Book</a>

        <ul class="book-list">
            @foreach (var book in Model)
            {
                <!-- ✅ DÜZƏLİŞ: Kitaba klik → Edit (id ilə) -->
                <li class="book-card" data-book-id="@book.Id">

                    @if (!string.IsNullOrEmpty(book.ImagePath))
                    {
                        <img src="@book.ImagePath" alt="@book.Title" />
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/260x300?text=No+Image" alt="No Image" />
                    }

                    <strong>@book.Title</strong>

                    <div class="book-details">
                        <p><em>Notes:</em> @book.Notes</p>
                        <p><em>Thoughts:</em> @book.Thoughts</p>

                        <div class="rating">
                            @{
                                var fullStars = book.Rating;
                                var emptyStars = 5 - fullStars;
                            }
                            @for (int i = 0; i < fullStars; i++)
                            {
                                <span class="star filled">★</span>
                            }
                            @for (int i = 0; i < emptyStars; i++)
                            {
                                <span class="star empty">☆</span>
                            }
                        </div>
                    </div>

                    <div class="book-item">
                        <!-- ✅ DÜZƏLİŞ: Sil düyməsi event propagation dayandırır -->
                        <form asp-action="RemoveBook" method="post" onsubmit="event.stopPropagation();">
                            <input type="hidden" name="id" value="@book.Id" />
                            <button type="submit" onclick="event.stopPropagation(); return confirm('Bu kitabı silmək istədiyinizdən əminsiniz?');">🗑 Sil</button>
                        </form>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
</html>

<script>
    // ✅ Kitab kartına klikləyəndə edit səhifəsinə get
    document.querySelectorAll('.book-card').forEach(card => {
        card.addEventListener('click', function(e) {
            // Əgər "Sil" düyməsinə klik olunubsa, redirect etmə
            if (e.target.tagName === 'BUTTON' || e.target.closest('button')) {
                return;
            }

            const bookId = this.getAttribute('data-book-id');
            window.location.href = '@Url.Action("AddBook", "Page")?id=' + bookId;
        });
    });
</script>
</document_content>