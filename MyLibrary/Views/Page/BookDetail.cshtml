@model MyLibrary.Models.Book

@{
    ViewBag.Title = Model.Title;
}

<html>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
    }

    body {
        background: linear-gradient(135deg, #f8efe6 0%, #f1e4cf 100%);
        color: #3e2f1c;
        min-height: 100vh;
    }

    .container {
        display: flex;
        min-height: 100vh;
    }

    .sidebar-container {
        width: 200px;
        background: linear-gradient(180deg, #d9c8a9 0%, #cdb890 100%);
        border-right: 3px solid #b69e74;
        display: flex;
        flex-direction: column;
        padding: 25px;
    }

        .sidebar-container h3 {
            color: #4b3b1f;
            margin-bottom: 20px;
            text-align: center;
        }

        .sidebar-container button {
            padding: 10px;
            margin-bottom: 10px;
            border: none;
            background: #f2e4c7;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s;
        }

            .sidebar-container button:hover {
                background: #e0cda1;
                transform: translateX(4px);
            }

    .content {
        flex: 1;
        padding: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .book-detail-card {
        background: rgba(255, 255, 240, 0.98);
        border-radius: 20px;
        padding: 40px;
        max-width: 900px;
        width: 100%;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        display: flex;
        gap: 40px;
    }

    .book-image {
        flex-shrink: 0;
    }

        .book-image img {
            width: 300px;
            height: 400px;
            object-fit: cover;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .book-details {
        flex: 1;
    }

        .book-details h1 {
            font-size: 32px;
            color: #4a3825;
            margin-bottom: 15px;
            border-bottom: 3px solid #b59f7b;
            padding-bottom: 10px;
        }

    .book-owner {
        font-size: 16px;
        color: #6e5a3b;
        margin-bottom: 20px;
        font-style: italic;
    }

    .detail-section {
        margin-bottom: 25px;
    }

        .detail-section h3 {
            font-size: 18px;
            color: #6b4b3e;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .detail-section p {
            font-size: 15px;
            line-height: 1.6;
            color: #3e2f1c;
            background: #fff8e7;
            padding: 12px;
            border-radius: 8px;
        }

    .rating {
        display: flex;
        gap: 5px;
        font-size: 28px;
        margin-top: 10px;
    }

        .rating .filled {
            color: #ffbf00;
        }

        .rating .empty {
            color: #d3c7b2;
        }

    .back-btn {
        display: inline-block;
        margin-top: 20px;
        padding: 12px 25px;
        background: #6b4b3e;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .back-btn:hover {
            background: #5a3d32;
            transform: translateY(-2px);
        }
</style>

<div class="container">
    <div class="sidebar-container">
        <h3>@ViewBag.UserName</h3>
        <button onclick="location.href='@Url.Action("Libraries", "Library")'">📚 All Libraries</button>
        <button onclick="location.href='@Url.Action("Page", "Page")'">📖 My Library</button>
        <button onclick="location.href='@Url.Action("Login", "Account")'">🚪 Logout</button>
    </div>

    <div class="content">
        <div class="book-detail-card">
            <div class="book-image">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="@Model.Title" />
                }
                else
                {
                    <img src="https://via.placeholder.com/300x400?text=No+Image" alt="No Image" />
                }
            </div>

            <div class="book-details">
                <h1>📖 @Model.Title</h1>
                <p class="book-owner">👤 Kitabxana sahibi: <strong>@ViewBag.BookOwner</strong></p>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="detail-section">
                        <h3>📝 Qeydlər</h3>
                        <p>@Model.Notes</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Thoughts))
                {
                    <div class="detail-section">
                        <h3>💭 Təəssüratlar</h3>
                        <p>@Model.Thoughts</p>
                    </div>
                }

                <div class="detail-section">
                    <h3>⭐ Qiymətləndirmə</h3>
                    <div class="rating">
                        @{
                            var fullStars = Model.Rating;
                            var emptyStars = 5 - fullStars;
                        }
                        @for (int i = 0; i < fullStars; i++)
                        {
                            <span class="filled">★</span>
                        }
                        @for (int i = 0; i < emptyStars; i++)
                        {
                            <span class="empty">☆</span>
                        }
                    </div>
                </div>

                <a href="@Url.Action("Libraries", "Library")" class="back-btn">⬅ Geri Qayıt</a>
            </div>
        </div>
    </div>
</div>
</html>